---
import { BadgeCheckIcon, Github, Mail } from 'lucide-react';
import { Badge } from '../ui/badge';
import SocialPill from './SocialPill.astro';
---

<section
	class="mx-auto grid w-full max-w-[95vw] place-content-center items-center px-4 py-12 font-medium text-black/80 sm:max-w-[90vw] sm:px-6 sm:py-20 md:max-w-[80vw] lg:max-w-[70vw] dark:text-white"
>
	<div class="w-full">
		<div class="flex gap-4 mb-4 animate-fade-down">
			<a href="/" id="top" class="mb-4 sm:mb-0">
				<img
					src="/images/avatar.webp"
					alt="Reyneldis"
					width="48"
					height="48"
					fetchpriority="high"
					decoding="sync"
					class="object-cover w-12 h-12 rounded-full ring-2 ring-gray-200 transition-all duration-300 group-hover:ring-gray-300 dark:ring-gray-700 dark:group-hover:ring-gray-600"
				/>
			</a>
			<a
				href="https://www.linkedin.com/in/reineldis/"
				target="_blank"
				rel="noopener"
				class="flex justify-center items-center"
			>
				<Badge
					variant="secondary"
					className="bg-blue-500 px-3 py-1 text-xs text-white sm:text-sm dark:bg-blue-600"
				>
					<BadgeCheckIcon className="h-4 w-4 sm:h-5 sm:w-5" />
					<span class="ml-1">Disponible para trabajar</span>
				</Badge>
			</a>
		</div>
		<h1
			class="flex flex-col gap-y-2 items-center mt-6 text-3xl font-bold text-center animate-fade-up sm:mt-8 sm:flex-row sm:gap-x-4 sm:text-left sm:text-4xl"
			style="animation-delay: 100ms;"
		>
			Hola, soy Reyneldis
		</h1>
		<h2
			class="mt-4 text-lg text-center opacity-80 animate-fade-up sm:text-left sm:text-xl"
			style="animation-delay: 200ms;"
		>
			<strong class="text-xl text-orange-500 sm:text-2xl">Ingeniero informático </strong>
			con experiencia en desarrollo web, sistemas operativos y aplicaciones móviles.
		</h2>
		<nav
			class="flex flex-wrap gap-4 justify-center mt-8 animate-fade-up sm:justify-start"
			style="animation-delay: 300ms;"
		>
			<SocialPill href="#contacto">
				<Mail className="size-4" />
				Contáctame
			</SocialPill>
			<SocialPill href="https://github.com/Reyneldis" target="_blank">
				<Github className="size-4" />
				GitHub
			</SocialPill>
		</nav>
	</div>
</section>
